@model Social.WebUI.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend></legend>

        <div class="row">
            <div class="form-group col-md-4 col-md-offset-1">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new { @class="form-control", placeholder="New Name"})
            </div>
        </div>


        <div class="row">
        	<div class="form-group col-md-4 col-md-offset-1">
                @Html.LabelFor(m => m.Password)
        		@Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "inputPassword3", placeholder = "Password" })
            </div>
        </div>


        <div class="row">
        	<div class="form-group col-md-4 col-md-offset-1">
                @Html.LabelFor(m => m.ConfirmPassword)
        		@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", id = "inputPassword3", placeholder = "Password" })
            </div>
        </div>


        <div class="row">
        	<div class="col-md-4 col-md-offset-1">
                <input class="btn btn-success" type="submit" value="Register" />
        	</div>
        </div>
    </fieldset>
}   

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
